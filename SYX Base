namespace SYX
{




    class Main : MelonMod
    {
       

        #region Wait for UI

       


        public override void OnApplicationStart()// Don't mess with anything in here<3
        {

         
            ClassInjector.RegisterTypeInIl2Cpp<EnableDisableListener>();

            MelonCoroutines.Start(WaitForUI());


        }


        private IEnumerator WaitForUI()
        {

            yield return MenuEx.WaitForUInPatch();
            UserInterface = MenuEx.userInterface;
            SYXMenuStart();

        }



        public override void OnUpdate()
        {

        }

        #endregion



        #region SYXMenus

        //You Ui and game objects<3
        public static GameObject UserInterface;

        public static UiManager _Ui;

        public static ReMenuPage Credits;


        #endregion






        public static string Color = "#0018a1"; //Change #f8f8ff to your hex to change the color

        public static void SYXMenuStart()//Put your ui in here<3
        {








            _Ui = new UiManager("SYX", Icon_Do.CreateSprite(Icons.Tab), true, true, Color);

            var CC = _Ui.QMenu.AddMenuPage("MenuName", "Tooltip", Icon_Do.CreateSprite(Icons.Tab), Color);

            CC.AddButton("ButtonName", "Tooltip", null, null, Color);
        }
    }
}

  





